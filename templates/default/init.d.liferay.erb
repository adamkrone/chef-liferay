# Liferay auto-start
#
# description: Auto-starts tomcat
# processname: liferay

cd <%= @install_directory %>/liferay/tomcat

chown -R <%= @user %> webapps conf temp logs work

case $1 in
start)
        sudo -u liferay <%= @install_directory %>/liferay/tomcat/bin/startup.sh
        ;;
stop)
        sudo -u liferay <%= @install_directory %>/liferay/tomcat/bin/shutdown.sh
        ;;
restart)
        sudo -u liferay <%= @install_directory %>/liferay/tomcat/bin/shutdown.sh
        sudo -u liferay <%= @install_directory %>/liferay/tomcat/bin/startup.sh
        ;;
esac
exit 0